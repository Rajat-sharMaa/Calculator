<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="8dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.darklightning.rikki.calculator.MainActivity"
    android:background="?android:attr/colorPressedHighlight"
    android:gravity="center">

    <Button
        android:text="delete"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/bc"
        android:layout_toRightOf="@+id/b1"
        android:layout_toEndOf="@+id/b1"
        android:id="@+id/bdel"
        android:background="@android:drawable/btn_default_small"
        android:textStyle="bold"
        android:textSize="18sp"
        android:onClick="del" />

    <Button
        android:text="%"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/bdel"
        android:layout_toRightOf="@+id/b2"
        android:layout_toEndOf="@+id/b2"
        android:id="@+id/bper"
        android:background="@android:drawable/btn_default_small"
        android:textSize="36sp"
        android:textStyle="normal|bold"
        android:onClick="per" />

    <Button
        android:text="/"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:id="@+id/bdiv"
        android:layout_alignTop="@+id/bper"
        android:layout_toRightOf="@+id/b3"
        android:layout_toEndOf="@+id/b3"
        android:background="@android:drawable/btn_default_small"
        android:textStyle="bold"
        android:textSize="36sp"
        android:onClick="divide" />

    <Button
        android:text="7"
        android:layout_width="wrap_content"
        android:id="@+id/b7"
        android:visibility="visible"
        android:elevation="24dp"
        android:background="@android:drawable/checkbox_off_background"
        android:textSize="24sp"
        android:layout_below="@+id/b4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:layout_height="80dp"
        android:onClick="seven" />

    <Button
        android:text="C"
        android:layout_width="wrap_content"
        android:id="@+id/bc"
        android:background="@android:drawable/btn_default_small"
        android:textStyle="bold"
        android:layout_height="80dp"
        android:layout_below="@+id/space"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:textSize="30sp"
        android:onClick="clearscr" />

    <Button
        android:text="="
        android:layout_width="wrap_content"
        android:id="@+id/be"
        android:background="@android:drawable/checkbox_off_background"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_alignTop="@+id/b0"
        android:layout_alignBottom="@+id/b0"
        android:layout_toRightOf="@+id/b8"
        android:layout_toEndOf="@+id/b8"
        android:layout_height="80dp"
        android:onClick="equal" />

    <Button
        android:text="1"
        android:layout_width="wrap_content"
        android:id="@+id/b1"
        android:elevation="24dp"
        android:background="@android:drawable/checkbox_off_background"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_height="80dp"
        android:layout_below="@+id/bdel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="one" />

    <Button
        android:text="4"
        android:layout_width="wrap_content"
        android:id="@+id/b4"
        android:elevation="24dp"
        android:background="@android:drawable/checkbox_off_background"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_height="80dp"
        android:layout_below="@+id/b1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="four" />

    <Button
        android:text="x"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:id="@+id/bmul"
        android:background="@android:drawable/btn_default_small"
        android:layout_below="@+id/bper"
        android:layout_alignStart="@+id/bdiv"
        android:layout_alignEnd="@+id/bdiv"
        android:textSize="36sp"
        android:onClick="product" />

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:id="@+id/bsub"
        android:background="@android:drawable/btn_default_small"
        android:layout_below="@+id/bmul"
        android:layout_toEndOf="@+id/b6"
        android:textSize="36sp"
        android:textStyle="normal|bold"
        android:fontFamily="monospace"
        android:onClick="subtract" />

    <Button
        android:text="6"
        android:layout_width="wrap_content"
        android:id="@+id/b6"
        android:background="@android:drawable/checkbox_off_background"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_height="80dp"
        android:layout_below="@+id/bmul"
        android:layout_toRightOf="@+id/b5"
        android:layout_toEndOf="@+id/b5"
        android:onClick="six" />

    <Button
        android:text="8"
        android:layout_width="wrap_content"
        android:id="@+id/b8"
        android:textSize="24sp"
        android:background="@android:drawable/checkbox_off_background"
        android:textStyle="bold"
        android:layout_height="80dp"
        android:layout_toRightOf="@+id/b7"
        android:layout_toEndOf="@+id/b7"
        android:layout_alignBottom="@+id/b7"
        android:layout_below="@+id/b4"
        android:onClick="eight" />

    <Button
        android:text="5"
        android:layout_width="wrap_content"
        android:id="@+id/b5"
        android:background="@android:drawable/checkbox_off_background"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/bsub"
        android:layout_toRightOf="@+id/b1"
        android:layout_toEndOf="@+id/b1"
        android:layout_below="@+id/b1"
        android:onClick="five" />

    <Button
        android:text="9"
        android:layout_width="wrap_content"
        android:id="@+id/b9"
        android:background="@android:drawable/checkbox_off_background"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/b8"
        android:layout_toRightOf="@+id/b0"
        android:layout_toEndOf="@+id/b0"
        android:layout_below="@+id/bsub"
        android:onClick="nine" />

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:id="@+id/badd"
        android:background="@android:drawable/btn_default_small"
        android:textStyle="bold"
        android:layout_toEndOf="@+id/b9"
        android:layout_height="180dp"
        android:layout_below="@+id/bsub"
        android:textSize="36sp"
        android:onClick="add" />

    <Button
        android:text="3"
        android:layout_width="wrap_content"
        android:id="@+id/b3"
        android:background="@android:drawable/checkbox_off_background"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_height="80dp"
        android:layout_below="@+id/bper"
        android:layout_toRightOf="@+id/b2"
        android:layout_toEndOf="@+id/b2"
        android:onClick="three" />

    <Button
        android:text="2"
        android:layout_width="wrap_content"
        android:id="@+id/b2"
        android:elevation="@android:dimen/app_icon_size"
        android:background="@android:drawable/checkbox_off_background"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/bmul"
        android:layout_toRightOf="@+id/bc"
        android:layout_toEndOf="@+id/bc"
        android:layout_below="@+id/bdel"
        android:onClick="two" />

    <Button
        android:text="."
        android:layout_width="wrap_content"
        android:id="@+id/bd"
        android:background="@android:drawable/checkbox_off_background"
        android:textStyle="normal|bold"
        android:textSize="36sp"
        android:layout_alignBottom="@+id/badd"
        android:layout_below="@+id/b7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="80dp"
        android:onClick="dec" />

    <Button
        android:text="0"
        android:layout_width="wrap_content"
        android:id="@+id/b0"
        android:background="@android:drawable/checkbox_off_background"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/bd"
        android:layout_toRightOf="@+id/b7"
        android:layout_toEndOf="@+id/b7"
        android:layout_below="@+id/b7"
        android:onClick="zero" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/space"
        android:background="@android:drawable/toast_frame"
        android:elevation="12dp"
        android:backgroundTint="?android:attr/colorLongPressedHighlight"
        android:textAlignment="textEnd"
        android:textColor="?attr/textColorAlertDialogListItem"
        android:textAllCaps="true"
        android:textSize="36sp"
        android:hint="0"
        android:cursorVisible="false"
        android:clickable="false"
        android:contextClickable="true"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/bc"
        android:layout_alignStart="@+id/bc"
        android:layout_alignEnd="@+id/bdiv"/>

</RelativeLayout>
